{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/dbt1/neutrino-settings-generator/schemas/scanfile.cable.schema.json",
  "title": "Neutrino Cable Scanfile",
  "type": "object",
  "additionalProperties": false,
  "required": ["providers"],
  "properties": {
    "providers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "transponders"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "country": {
            "type": "string"
          },
          "delivery_system": {
            "type": "string"
          },
          "extras": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "transponders": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["frequency_hz"],
              "properties": {
                "frequency_hz": {
                  "type": "integer",
                  "minimum": 1
                },
                "symbol_rate": {
                  "type": "integer",
                  "minimum": 1
                },
                "bandwidth_hz": {
                  "type": "integer",
                  "minimum": 1
                },
                "modulation": {
                  "type": "string",
                  "minLength": 1
                },
                "fec": {
                  "type": "string",
                  "minLength": 1
                },
                "polarization": {
                  "type": "string",
                  "enum": ["H", "V", "L", "R"]
                },
                "system": {
                  "type": "string"
                },
                "extras": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
